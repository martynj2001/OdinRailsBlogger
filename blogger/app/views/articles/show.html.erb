<h1> Article: <%= @articles.title %> </h1>

<% if @articles.image_file_name != nil %>
	<p><%= image_tag @articles.image.url %></p>
<% end %>
<p>Tags:
<% @articles.tags.each do |tag| %>
	<%= link_to tag.name, tag_path(tag) %>
<% end %></p>

<p><%=@articles.body %></p>

<h3>Comments (<%= @articles.comments.size %>)</h3>
<%= render partial: 'articles/comment', collection:@articles.comments %>

<%= render partial: 'comments/form' %>

<div>
	<%= link_to "Back to Articles List", articles_path, class: "btn" %> 
	<%= link_to "Edit Article", edit_article_path(@articles), class: "btn" %>
	<%= link_to "Delete" , article_path(@articles), method: :delete, data: {confirm: "Really delete this article?"}, class: "btn"%>
</div>